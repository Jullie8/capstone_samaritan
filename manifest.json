{
    "manifest_version": 2,
  
    "name": "Getting started with chrome ext to activate on nytimes",
    "description": "This extension allows the user to change the background color of the current page.",
    "version": "1.1",

    "content_scripts": [
        {
          "matches": ["http://*.nytimes.com/*", "http://*.bloomberg.com/*"],
          "css": ["styles.css"],
          "js": ["popup.js"]
        }
      ],

      "background": {
        "scripts": ["background.js"],
        "persistent": false
      },

      "page_action": {
        "default_icon" : "hand.png",
        "default_popup": "popup.html",
        "default_title": "Only visible on nytimes.com"
    },
  
      // "browser_action": {
      //   "default_icon" : "hand.png",
      //   "default_popup": "popup.html",
      //   "default_title": "Activate on nytimes!"
      // },

    "permissions": [
      "tabs",
      "activeTab",
      "storage"
      // "https://www.cnn.com/",  "http://www.cnn.com/"
    ]
  }
  

