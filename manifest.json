{
    "manifest_version": 2,
  
    "name": "Getting started with chrome ext to activate on nytimes",
    "description": "This extension allows the user to change the background color of the current page.",
    "version": "1.1",

    "content_scripts": [
        {
          //there are more site to be added to matches 
          "matches": ["http://*.bloomberg.com/*", "http://*.cnn.com/*","http://*.nytimes.com/*", "http://*.theguardian.com/*", "http://*.washingtonpost.com/*", "http://*.yahoo.com/news/*", "http://*.economist.com/*", "http://*.usatoday.com/*", "http://*.huffingtonpost.com/*" ],
          "css": ["styles.css"],
          "js": ["popup.js"]
        }
      ],

      "background": {
        "scripts": ["background.js"],
        "persistent": false
      },

      "page_action": {
        "default_icon" : "hand.png",
        "default_popup": "popup.html",
        "default_title": "Only visible on nytimes.com"
    },
  
      // "browser_action": {
      //   "default_icon" : "hand.png",
      //   "default_popup": "popup.html",
      //   "default_title": "Activate on nytimes!"
      // },

    "permissions": [
      "tabs",
      "activeTab",
      "storage"

    ]
  }
  

